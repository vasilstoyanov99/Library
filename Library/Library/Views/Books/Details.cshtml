@using Library.Infrastructure
@model Library.Services.Books.Models.BookDetailsServiceModel

@{ ViewBag.Title = "Details"; }

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

@if (Model != null)
{
    <div id="main-content" class="blog-page">
        <div class="container">
            <div class="row clearfix">
                <div class="col-lg-8 col-md-12 offset-md-2">
                    <div class="card single_post">
                        <div class="body">
                            <div class="img-post">
                                <img class="d-block img-fluid mx-auto" src="@Model.ImageUrl" alt="@Model.Title book cover image">
                            </div>
                            <h3 class="text-center" style="padding: 10px">
                                @Model.Title by @Model.Author
                            </h3>
                            <h5 class="text-center" style="margin-top: 50px">Genre: @Model.Genre</h5>
                            <h5 style="text-align: center">@Model.LongDescription</h5>
                        </div>
                        <div class="footer text-center">
                            <div class="actions">
                                @if (Model.CanUserEdit || User.IsAdmin())
                                {
                                    <a asp-controller="Books"
                                       asp-action="EditBook"
                                       asp-route-bookId="@Model.Id"
                                       class="btn btn-outline-warning">
                                        Edit
                                    </a>
                                    <a asp-controller="Books"
                                       asp-action="Delete"
                                       asp-route-bookId="@Model.Id"
                                       class="btn btn-outline-danger" style="margin: 10px">
                                        Delete
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}